<h2 class="m-3 me-auto">Productos</h2>
    <% if(productos.length > 0){ %>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr> 
                        <th>ID</th> 
                        <th>Producto</th> 
                        <th>Precio</th> 
                        <th>Imagen</th> 
                    </tr>
                </thead>
                <tbody>
                    <% for (const producto of productos) {%>
                    <tr>
                        <td>#<%=producto.id%></td>
                        <td><%=producto.title%></td>
                        <td>$<%=producto.price%></td>
                        <td><img src=<%=producto.thumbnail%>  alt=""  width="50" height="50"></td>
                    </tr>
                    <%};%>
                </tbody>
            </table>
        </div>
    <% } else{ %>
        <h3 class="alert alert-danger">No se encontraron productos</h1>
    <% } %>    